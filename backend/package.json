{
    "name": "autoblog-backend",
    "version": "1.0.0",
    "description": "Backend for Ruans AutoBlog - generates tech articles daily using AI (HuggingFace).",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "generate": "drizzle-kit generate",
        "studio": "drizzle-kit studio",
        "migrate": "node src/db/migrate.ts",
        "migrate:prod": "node dist/db/migrate.js"
    },
    "dependencies": {
        "@gradio/client": "^2.0.0",
        "@huggingface/inference": "^4.13.4",
        "@paralleldrive/cuid2": "^3.0.4",
        "@prisma/client": "^5.14.0",
        "axios": "^1.6.7",
        "chalk": "^5.6.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "drizzle-kit": "^0.31.8",
        "drizzle-orm": "^0.45.0",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0",
        "node-cron": "^3.0.3",
        "openai": "^6.10.0",
        "postgres": "^3.4.7",
        "slugify": "^1.6.6",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.19",
        "@types/node-cron": "^3.0.11",
        "prisma": "^5.14.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}
